            <solid android:color="#fff"/>
        </shape>
    </item>
    <item android:left="-2dp" android:top="-2dp" android:right="-2dp">

        <shape android:shape="rectangle" >
            <stroke android:color="#d3d3d3"
                android:width="1dp"/>
        </shape>
    </item>
</layer-list>
