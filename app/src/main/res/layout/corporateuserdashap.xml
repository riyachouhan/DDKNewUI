<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_6sdp"
    android:layout_marginLeft="@dimen/_6sdp"
    android:background="@drawable/text_card_bg"
    android:id="@+id/viewclickdata"
    android:gravity="center_vertical"
    android:orientation="vertical">

                <LinearLayout
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvNametitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        style="@style/hintview"/>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/emailid"
                            android:layout_width="0dp"
                            android:gravity="top"
                            android:layout_weight="1.9"
                            android:drawablePadding="@dimen/_2sdp"
                            android:drawableLeft="@drawable/email_ac"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlackText"
                            style="@style/MyCustomTabText_small" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:gravity="left"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/datetv"
                                android:layout_width="wrap_content"
                                android:drawableLeft="@drawable/calaender_aac"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorBlackText"
                                style="@style/MyCustomTabText_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:layout_weight="0.2">

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:gravity="right"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorBlackText"
                                style="@style/MyCustomTabText_small" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

</LinearLayout>