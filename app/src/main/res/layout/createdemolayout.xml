<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/outerheaderlyaout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/forgot_TV"
        style="@style/forgotheadpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Forgot your Password?"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:gravity="center"
        style="@style/subhintdataSize"
        android:text="We just need your registered Email address to send your password." />

        <EditText
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:id="@+id/txtInput"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textColor="@color/black_color"
            android:hint="Write Something To Save"
            android:textColorHint="@color/black_color"
            android:gravity="top" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnSave"
            android:layout_below="@+id/txtInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read"
            android:id="@+id/btnRead"
            android:layout_below="@+id/txtInput"
            android:layout_toRightOf="@+id/btnSave"
            android:layout_toEndOf="@+id/btnSave" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtContent"
            android:layout_below="@+id/btnSave"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txtInput"
            android:layout_alignEnd="@+id/txtInput"
            android:layout_alignParentBottom="true"
            android:scrollIndicators="bottom|right"
            android:editable="false" />

    <LinearLayout
        android:id="@+id/back_view"
        android:layout_marginTop="@dimen/_35sdp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:tint="#393A39"
            android:layout_gravity="center"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/left_double_arrow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginLeft="-6dp"
            android:text="Back"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#393A39"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>


