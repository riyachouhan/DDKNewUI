<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tablayout_funnel_iteam_powwerx"
    android:id="@+id/viewclickdata"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.6"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvemailsub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="jcosiolsudnhaja@gmail.com"
                        style="@style/sabphasetets"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvdatetimesub"
                            android:text="05/05/2021 | 5:00 pm"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlackText"
                            style="@style/MyCustomTabText_small" />

                        <TextView
                            android:id="@+id/tvpointsub"
                            android:text="Point | 2"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlackText"
                            style="@style/MyCustomTabText_small" />

                        <TextView
                            android:text="Renewal : 1x"
                            android:id="@+id/tvrenewalsub"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlackText"
                            style="@style/MyCustomTabText_small" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.4"
                    android:gravity="end"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvStatussub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Active"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_9sdp"
                        android:paddingLeft="@dimen/_9sdp"
                        android:background="@drawable/light_green_back"
                        android:textColor="@color/green_color"
                        style="@style/myhometext" />

                    <TextView
                        android:paddingRight="@dimen/_4sdp"
                        android:id="@+id/tvPackk_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/colorPrimary"
                        style="@style/powerbolde" />

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_gray"/>

</LinearLayout>