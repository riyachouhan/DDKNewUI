<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    android:gravity="center_vertical"
    android:background="@drawable/tablayout_funnel_iteam"
    android:id="@+id/slidermain"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:background="@drawable/light_gblue_back"
            android:textColor="#036CA1"
            android:textStyle="bold"
            style="@style/MyCustomTabText_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
           android:id="@+id/emailview"
            android:layout_marginTop="@dimen/_4sdp"
            android:textColor="@color/black"
            style="@style/MyCustomTabText_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/datetimetv"
                android:textColor="@color/black"
                style="@style/subMyCustomTabText_small" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/renewaltv"
                android:paddingLeft="@dimen/_4sdp"
                android:textColor="@color/black"
                style="@style/subMyCustomTabText_small" />

        </LinearLayout>

        <TextView
            android:paddingRight="@dimen/_4sdp"
            android:id="@+id/tvpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            style="@style/extrabuttontext" />

    </LinearLayout>

</LinearLayout>
