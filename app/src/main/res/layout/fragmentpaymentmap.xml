<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="visible">

            <TextView
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/tvSelectPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                 android:text="Please select payment mode"
                android:textColor="@color/colorBlackText"
                style="@style/corporateSummer"/>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/text_card_bg"
                android:id="@+id/btnPayUsingSamKoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:src="@drawable/samk_logo_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="SAM Koin"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/textSizehint" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/text_card_bg"
                android:id="@+id/btnPayUsingBTC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:src="@drawable/ic_bitcoin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="BTC"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/textSizehint" />

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/text_card_bg"
                android:id="@+id/btnPayUsingETH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:src="@drawable/ic_eth" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="ETH"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/textSizehint" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/text_card_bg"
                android:id="@+id/btnPayUsingUSdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:src="@drawable/ic_usdt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="USDT(ERC 20)"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/textSizehint" />

                </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/text_card_bg"
                android:id="@+id/btnPayUsingCreditCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:src="@drawable/ic_pay_credit_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="Credit Card"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/textSizehint" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/text_card_bg"
                android:id="@+id/btnPayUsingKpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:src="@drawable/kinerjapay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="KPay"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/textSizehint" />

            </LinearLayout>

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Next"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/next"
                android:background="@drawable/button_accent_round"
                style="@style/corporateSummer"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>